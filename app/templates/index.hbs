{{#if model.length}}
	<section class="main">
		{{input class="toggle-all" type="checkbox" checked=allCompleted}}

		<ul class="todo-list">
			{{#each model as |todo|}}
				<li>
					{{input class="toggle" type="checkbox" checked=todo.isCompleted}}
					<label>{{todo.title}}</label>
					<button class="destroy"></button>
				</li>
			{{/each}}
		</ul>
	</section>
{{/if}}
